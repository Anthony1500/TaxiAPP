<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#014C4C"
    tools:context=".login">


    <Button
        android:id="@+id/bt_login"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="476dp"
        android:background="@drawable/cornerradius_boton"
        android:backgroundTint="@color/colorGris"
        android:contextClickable="false"
        android:gravity="center"
        android:isScrollContainer="false"
        android:text="Iniciar Sesion "
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/colorBlanco"
        android:translationY="-67dp"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.812"
        app:srcCompat="@drawable/wp2164087" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="236dp"
        android:ems="10"
        android:hint="Usuario"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="340dp"
        android:ems="10"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--Botón de recuperación de credenciales -->

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="312dp"
        android:foregroundTint="#9C27B0"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:text="Contraseña"
        android:textColor="@color/colorBlanco"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.206"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="216dp"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:text="Usuario"
        android:textColor="@color/colorBlanco"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.192"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_recuperarcontrasena"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="351dp"
        android:layout_height="59dp"
        android:layout_gravity="center"
        android:layout_marginTop="456dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="¿Ha olvidado su contraseña?"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/colorBlanco"
        app:backgroundTint="@color/cardview_shadow_end_color"
        app:iconTint="@color/cardview_shadow_end_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="@color/cardview_shadow_end_color" />


    <Button
        android:id="@+id/btn_registro"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="351dp"
        android:layout_height="59dp"
        android:layout_gravity="center"
        android:layout_marginTop="504dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Create una Cuenta"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/colorBlanco"
        app:backgroundTint="@color/cardview_shadow_end_color"
        app:iconTint="@color/cardview_shadow_end_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="@color/cardview_shadow_end_color" />

</androidx.constraintlayout.widget.ConstraintLayout>
